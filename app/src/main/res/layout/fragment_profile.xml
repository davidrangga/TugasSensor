<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8DC">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROFILE"
        android:textStyle="bold"
        android:textSize="34dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:padding="9dp"/>

    <ImageView
        android:id="@+id/foto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:padding="7dp"
        android:src="@drawable/david" />


    <TextView
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_below="@id/foto"
        android:background="#A9A9A9"
        android:padding="7dp"
        android:paddingStart="30dp"
        android:text="Nama     : David Rangga Wijaya"
        android:textColor="@color/black"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/nim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIM        : 10120101"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:layout_below="@id/nama"
        android:background="#A9A9A9"
        android:paddingStart="30dp"
        android:padding="7dp"/>
    <TextView
        android:id="@+id/kelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kelas      : IF-3"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:layout_below="@id/nim"
        android:background="#A9A9A9"
        android:paddingStart="30dp"
        android:padding="7dp"/>
    <TextView
        android:id="@+id/jurusan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jurusan : Teknik Informatika"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:layout_below="@id/kelas"
        android:background="#A9A9A9"
        android:paddingStart="30dp"
        android:padding="7dp"/>

</RelativeLayout>